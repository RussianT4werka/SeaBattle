<Page x:Class="SeaBattle.Views.StabbingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeaBattle.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StabbingPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="1" x:Name="BattleFieldSelf"  MouseLeftButtonDown="Down" Width="500" Height="500">
            <Canvas.Background>
                <ImageBrush ImageSource="/Images/Безымянный.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas Grid.Column="2" x:Name="BattleFieldEnemy" Background="red" MouseLeftButtonDown="Down" Width="500" Height="500"/>
    </Grid>

</Page>
